<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles/login.css">
    <script src="https://kit.fontawesome.com/d5c465f7b6.js" crossorigin="anonymous"></script>

    <title>Document</title>
</head>
<% include("./partials/header.ejs"); %>
<body>
    <div class="container-formLogin">
        <h1>register</h1>
        <form action="/users/register" method="POST" enctype="multipart/form-data">
            
            <% if (locals.errores) {  

                errores.forEach(error => { %>
                    <p class="error"> <%= error.msg %> </p>
                <%  }); 
            }%>
            <label for="name">Name:</label><br>
            <input id="user-name" name="name" type="text" placeholder="Name" value="<%= locals.old && old.name ? old.name : '' %>">
            <label for="email">Email:</label><br>
            <input id="email" name="email" type="text" placeholder="email" value="<%= locals.old && old.email ? old.email : '' %>">
            <label for="password">Password:</label><br>
            <input id="password" name="password" type="text" placeholder="password" value="<%= locals.old && old.password ? old.password : '' %>">
            <input type="file" name="image" id="image">
            <div class="googleLog-container">
                <i class="fa-brands fa-google"></i>
                <p>log in with Google</p>
            </div>
            <button class="log-user">Submit</button>
        </form>
        <a href="">
            Forgot your password?
        </a>
    </div>
    
</body>
<script src="script/login.js"></script>
</html>